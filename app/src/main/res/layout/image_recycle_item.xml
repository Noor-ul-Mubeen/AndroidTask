<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="dogImage"
            type="com.example.breedsearch.model.DogImageModel" />
        <variable
            name="lastElement"
            type="Boolean" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/dog_image_view"

                android:src="@drawable/loading_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:imageUrl="@{dogImage.url}"
                android:visibility="@{lastElement? View.GONE : View.VISIBLE}"
                android:scaleType="fitXY" />
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{lastElement? View.VISIBLE : View.GONE}"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>